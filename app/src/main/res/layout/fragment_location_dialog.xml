<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aurora.seedit.ui.LocationDialogFragment">

<LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
             android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:background="@color/nliveo_green_colorPrimary"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Garden Location"
            android:id="@+id/garden_location_button"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"/>

        <Button
            android:background="@color/nliveo_green_colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Current Location"
            android:id="@+id/current_location_button"
            android:layout_below="@+id/garden_location_button"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:gravity="center"
            android:hint="Street Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/address_edittext1"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <EditText
            android:gravity="center"
            android:hint="City"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/address_edittext2"
            android:layout_below="@+id/address_edittext1"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/current_location_button"
            android:layout_alignStart="@+id/current_location_button"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@+id/current_location_button"
            android:textSize="20sp"
            android:textColor="@color/nliveo_green_colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Location"
            android:id="@+id/textView10"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/spinner"
            android:layout_below="@+id/address_edittext1"
            android:layout_toRightOf="@+id/address_edittext2"
            android:layout_alignRight="@+id/address_edittext1"
            android:layout_alignEnd="@+id/address_edittext1"/>

    </RelativeLayout>


</LinearLayout>
</FrameLayout>