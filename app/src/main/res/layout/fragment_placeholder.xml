<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  tools:context="aurora.seedit.ui.LoginActivity"
                  android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@color/nliveo_green_colorPrimary">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:background="@drawable/circle"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:text="J"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:paddingLeft="40dp"
            android:paddingTop="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeff Zheng"
            android:id="@+id/textView4"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_above="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 15"
            android:id="@+id/textView5"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView2"
            android:src="@drawable/circle_gold"
            android:layout_below="@+id/imageView"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"/>

        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="100"
            android:id="@+id/textView6"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"/>

        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="100"
            android:id="@+id/textView7"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView3"
            android:src="@drawable/circle_silver"
            android:layout_below="@+id/imageView"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7"/>

        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="100"
            android:id="@+id/textView8"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView4"
            android:src="@drawable/circle_bronze"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.55"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:id="@+id/login_layout">

    </RelativeLayout>

</LinearLayout>
