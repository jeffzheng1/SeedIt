<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="aurora.seedit.ui.GrowingInstructionFragment"
        android:background="@color/polymer_red_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Growing Instructions"
            android:id="@+id/growing_instructions_title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_marginBottom="10dp"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/growing_instructions_title"
            android:id="@+id/growing_instructions_text"
            android:layout_marginTop="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</ScrollView>
